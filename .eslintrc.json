{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "semi": true,
        "useTabs": false,
        "endOfLine": "auto"
      }
    ],
    "no-underscore-dangle": "off",
    "quotes": [1, "single"],
    "react/prop-types": "off",
    "react/jsx-props-no-spreading": "off",
    "import/no-named-as-default": 0,
    "no-param-reassign": "off"
  }
}
